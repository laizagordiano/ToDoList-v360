<h1>My Lists</h1>

<!-- Link para criar uma nova lista -->
<%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>

<hr>

<!-- Lista de listas do usuário -->
<ul>
  <% @lists.each do |list| %>
    <li>
      <!-- Link para ir para a página da lista (show) -->
      <%= link_to list.title, list_path(list), class: "list-title" %>

      <!-- Links de ação -->
      (<%= link_to "Edit", edit_list_path(list) %> |
       <%= button_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?" } %>)

    </li>
  <% end %>
</ul>
