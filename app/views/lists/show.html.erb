<h1><%= @list.title %></h1>
<p><%= @list.description %></p>

<hr>

<h2>Tasks</h2>

<!-- Link para criar nova tarefa -->
<%= link_to "Add Task", new_list_task_path(@list), class: "btn btn-success" %>

<ul>
  <% @list.tasks.each do |task| %>
    <li>
      <%= task.title %> 
      <% if task.done %>
        (Done)
      <% end %>
      | <%= link_to "Edit", edit_list_task_path(@list, task) %>
      | <%= link_to "Delete", list_task_path(@list, task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

