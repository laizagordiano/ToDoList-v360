<h1>Task: <%= @task.title %></h1>

<p>
  <strong>Status:</strong>
  <%= @task.done ? "Completed ✅" : "Pending ❌" %>
</p>

<hr>

<!-- Links de ação -->
<%= link_to "Edit Task", edit_list_task_path(@task.list, @task), class: "btn btn-primary" %>
<%= link_to "Delete Task", list_task_path(@task.list, @task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

<hr>

<!-- Voltar para a lista -->
<%= link_to "Back to List", list_path(@task.list), class: "btn btn-secondary" %>
