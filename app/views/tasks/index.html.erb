<h1>Tasks for <%= @list.title %></h1>

<%= link_to "New Task", new_list_task_path(@list), class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Done?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.done ? "Yes" : "No" %></td>
        <td>
          <%= link_to "Edit", edit_list_task_path(@list, task) %> |
          <%= button_to "Delete", list_task_path(@list, task), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to Lists", lists_path %>
