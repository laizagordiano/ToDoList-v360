<div style="display: flex; align-items: center; justify-content: center; min-height: 100vh; padding: 20px;">
  <div style="width: 100%; max-width: 450px; background: white; border-radius: 12px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); padding: 40px;">

    <h2 style="font-size: 28px; font-weight: bold; margin-bottom: 30px; text-align: center; color: #1f2937;">
      <%= t('sessions.new.title') %>
    </h2>

    <%= form_with url: session_path, method: :post do |f| %>
      
      <div style="margin-bottom: 20px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('sessions.new.email_label') %></label>
        <%= f.email_field :email, placeholder: t('sessions.new.email_placeholder'),
              style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px;" %>
      </div>

      <div style="margin-bottom: 30px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('sessions.new.password_label') %></label>
        <%= f.password_field :password, placeholder: t('sessions.new.password_placeholder'),
              style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px;" %>
        <div style="text-align: right; margin-top: 8px;">
          <%= link_to "Esqueceu a senha?", new_password_path, style: "color: #2563eb; font-size: 13px; text-decoration: none; transition: color 0.2s;" %>
        </div>
      </div>

      <%= f.submit t('sessions.new.submit_button'),
            style: "width: 100%; background-color: #2563eb; color: white; font-weight: bold; padding: 12px; border-radius: 8px; border: none; cursor: pointer; font-size: 16px;" %>
    <% end %>

    <p style="text-align: center; color: #6b7280; margin-top: 25px;">
      <%= t('sessions.new.no_account') %>
      <%= link_to t('sessions.new.register_link'), new_user_path,
            style: "color: #2563eb; font-weight: 600; text-decoration: none;" %>
    </p>
  </div>
</div>
