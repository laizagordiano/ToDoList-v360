<div style="display: flex; align-items: center; justify-content: center; min-height: 100vh; padding: 20px;">
  <div style="width: 100%; max-width: 450px; background: white; border-radius: 12px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); padding: 40px;">

    <h2 style="font-size: 28px; font-weight: bold; margin-bottom: 30px; text-align: center; color: #1f2937;"><%= t('users.new.title') %></h2>

    <%= form_with model: @user, class: "space-y-4" do |f| %>
      
      <% if @user.errors.any? %>
        <div style="background: rgba(239, 68, 68, 0.1); backdrop-filter: blur(8px); border: 1px solid rgba(239, 68, 68, 0.3); color: #991b1b; padding: 16px; border-radius: 12px; margin-bottom: 24px;">
          <p style="font-weight: 600; margin-bottom: 12px; display: flex; align-items: center; gap: 8px;">
            <span style="font-size: 20px;">⚠️</span>
            <%= t('users.new.errors_found') %>
          </p>
          <ul style="margin-left: 28px; margin-bottom: 0; line-height: 1.6;">
            <% @user.errors.full_messages.each do |msg| %>
              <li style="margin-bottom: 4px;"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 20px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('users.new.name_label') %></label>
        <%= f.text_field :name, placeholder: t('users.new.name_placeholder'), style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('users.new.email_label') %></label>
        <%= f.email_field :email, placeholder: t('users.new.email_placeholder'), style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('users.new.password_label') %></label>
        <%= f.password_field :password, placeholder: t('users.new.password_placeholder'), style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px;" %>
      </div>

      <div style="margin-bottom: 30px;">
        <label style="display: block; color: #374151; font-weight: 600; margin-bottom: 8px;"><%= t('users.new.password_confirmation_label') %></label>
        <%= f.password_field :password_confirmation, placeholder: t('users.new.password_confirmation_placeholder'), style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 10px 12px; font-size: 14px;" %>
      </div>

      <%= f.submit t('users.new.submit_button'), style: "width: 100%; background-color: #2563eb; color: white; font-weight: bold; padding: 12px; border-radius: 8px; border: none; cursor: pointer; font-size: 16px; transition: background-color 0.2s;" %>
    <% end %>

    <p style="text-align: center; color: #6b7280; margin-top: 25px;">
      <%= t('users.new.have_account') %> <%= link_to t('users.new.login_link'), new_session_path, style: "color: #2563eb; font-weight: 600; text-decoration: none;" %>
    </p>
  </div>
</div>
