<%# 
  Toast não deve aparecer no formulário de cadastro (users#new)
  pois os erros são exibidos inline no próprio formulário
%>
<% unless controller_name == 'users' && action_name == 'new' %>
  <% if flash[:notice] || flash[:alert] %>
    <div id="toast-container" style="position: fixed; top: 24px; right: 24px; z-index: 9999; display: flex; flex-direction: column; gap: 12px; max-width: 420px;">
      
      <% if flash[:notice] %>
      <% translated_message = translate_flash_message(flash[:notice], :notice) %>
      <div class="toast toast-success" role="alert" style="
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.25) 0%, rgba(5, 150, 105, 0.2) 100%);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        color: #1f2937;
        padding: 16px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(16, 185, 129, 0.15), 0 2px 8px rgba(0, 0, 0, 0.04), inset 0 1px 0 rgba(255, 255, 255, 0.3);
        border: 1px solid rgba(16, 185, 129, 0.3);
        display: flex;
        align-items: center;
        gap: 12px;
        animation: toastSlideIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        font-weight: 600;
        font-size: 14px;
        line-height: 1.5;
      ">
        <div style="width: 4px; height: 32px; background: linear-gradient(180deg, #10b981 0%, #059669 100%); border-radius: 2px; flex-shrink: 0; box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);"></div>
        <span style="flex: 1; color: #1f2937;"><%= translated_message %></span>
        <button onclick="closeToast(this)" style="
          background: rgba(16, 185, 129, 0.15);
          border: none;
          color: #1f2937;
          width: 28px;
          height: 28px;
          border-radius: 8px;
          cursor: pointer;
          font-size: 18px;
          line-height: 1;
          display: flex;
          align-items: center;
          justify-content: center;
          transition: all 0.2s;
          flex-shrink: 0;
          font-weight: 400;
        " 
        onmouseover="this.style.background='rgba(16, 185, 129, 0.25)'; this.style.transform='scale(1.1)'" 
        onmouseout="this.style.background='rgba(16, 185, 129, 0.15)'; this.style.transform='scale(1)'">
          ×
        </button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <% translated_message = translate_flash_message(flash[:alert], :alert) %>
      <div class="toast toast-error" role="alert" style="
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.25) 0%, rgba(220, 38, 38, 0.2) 100%);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        color: #1f2937;
        padding: 16px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(239, 68, 68, 0.15), 0 2px 8px rgba(0, 0, 0, 0.04), inset 0 1px 0 rgba(255, 255, 255, 0.3);
        border: 1px solid rgba(239, 68, 68, 0.3);
        display: flex;
        align-items: center;
        gap: 12px;
        animation: toastSlideIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        font-weight: 600;
        font-size: 14px;
        line-height: 1.5;
      ">
        <div style="width: 4px; height: 32px; background: linear-gradient(180deg, #ef4444 0%, #dc2626 100%); border-radius: 2px; flex-shrink: 0; box-shadow: 0 0 8px rgba(239, 68, 68, 0.4);"></div>
        <span style="flex: 1; color: #1f2937;"><%= translated_message %></span>
        <button onclick="closeToast(this)" style="
          background: rgba(239, 68, 68, 0.15);
          border: none;
          color: #1f2937;
          width: 28px;
          height: 28px;
          border-radius: 8px;
          cursor: pointer;
          font-size: 18px;
          line-height: 1;
          display: flex;
          align-items: center;
          justify-content: center;
          transition: all 0.2s;
          flex-shrink: 0;
          font-weight: 400;
        " 
        onmouseover="this.style.background='rgba(239, 68, 68, 0.25)'; this.style.transform='scale(1.1)'" 
        onmouseout="this.style.background='rgba(239, 68, 68, 0.15)'; this.style.transform='scale(1)'">
          ×
        </button>
      </div>
    <% end %>
  </div>

  <style>
    @keyframes toastSlideIn {
      0% {
        opacity: 0;
        transform: translateX(100%) translateY(-20px) scale(0.9);
      }
      60% {
        transform: translateX(-10px) translateY(0) scale(1.02);
      }
      100% {
        opacity: 1;
        transform: translateX(0) translateY(0) scale(1);
      }
    }

    @keyframes toastSlideOut {
      0% {
        opacity: 1;
        transform: translateX(0) scale(1);
      }
      100% {
        opacity: 0;
        transform: translateX(120%) scale(0.95);
      }
    }

    .toast.fade-out {
      animation: toastSlideOut 0.4s cubic-bezier(0.4, 0, 1, 1) forwards;
    }

    /* Adiciona um leve efeito de pulso ao aparecer */
    @keyframes pulse {
      0%, 100% {
        box-shadow: 0 8px 32px rgba(16, 185, 129, 0.3), 0 2px 8px rgba(0, 0, 0, 0.1);
      }
      50% {
        box-shadow: 0 8px 32px rgba(16, 185, 129, 0.5), 0 2px 12px rgba(0, 0, 0, 0.15);
      }
    }

    .toast-success {
      animation: toastSlideIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55), pulse 2s ease-in-out;
    }

    .toast-error {
      animation: toastSlideIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55), pulse 2s ease-in-out;
    }

    /* Melhora a legibilidade do texto com glassmorphism */
    .toast {
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    /* Responsividade */
    @media (max-width: 640px) {
      #toast-container {
        top: 16px;
        right: 16px;
        left: 16px;
        max-width: none;
      }
    }
  </style>

  <script>
    // Função para fechar toast manualmente
    function closeToast(button) {
      const toast = button.closest('.toast');
      if (!toast) return;
      
      toast.classList.add('fade-out');
      setTimeout(() => {
        toast.remove();
        // Remove container se não houver mais toasts
        const container = document.getElementById('toast-container');
        if (container && container.children.length === 0) {
          container.remove();
        }
      }, 400);
    }

    // Auto-fechar toasts após 6 segundos (um pouco mais de tempo para ler)
    function initToasts() {
      const toasts = document.querySelectorAll('.toast');
      toasts.forEach(toast => {
        // Remove animações anteriores se existirem
        const timeoutId = setTimeout(() => {
          if (toast && toast.parentElement) {
            toast.classList.add('fade-out');
            setTimeout(() => {
              if (toast.parentElement) {
                toast.remove();
              }
              // Remove container se não houver mais toasts
              const container = document.getElementById('toast-container');
              if (container && container.children.length === 0) {
                container.remove();
              }
            }, 400);
          }
        }, 6000);

        // Armazena o timeout ID no elemento para poder cancelar se necessário
        toast.dataset.timeoutId = timeoutId;
      });
    }

    // Inicializar ao carregar página
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initToasts);
    } else {
      initToasts();
    }

    // Inicializar também em navegação Turbo
    document.addEventListener('turbo:load', initToasts);
    
    // Pausa o auto-dismiss quando o mouse está sobre o toast
    document.addEventListener('DOMContentLoaded', function() {
      document.addEventListener('mouseover', function(e) {
        const toast = e.target.closest('.toast');
        if (toast && toast.dataset.timeoutId) {
          clearTimeout(parseInt(toast.dataset.timeoutId));
        }
      });

      document.addEventListener('mouseout', function(e) {
        const toast = e.target.closest('.toast');
        if (toast && !toast.classList.contains('fade-out')) {
          const timeoutId = setTimeout(() => {
            if (toast && toast.parentElement) {
              toast.classList.add('fade-out');
              setTimeout(() => {
                if (toast.parentElement) {
                  toast.remove();
                }
                const container = document.getElementById('toast-container');
                if (container && container.children.length === 0) {
                  container.remove();
                }
              }, 400);
            }
          }, 3000); // 3 segundos após tirar o mouse
          toast.dataset.timeoutId = timeoutId;
        }
      });
    });
  </script>
  <% end %>
<% end %>
